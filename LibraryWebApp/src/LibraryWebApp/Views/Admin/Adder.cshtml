@model BookViewModel

@{
    ViewData["Title"] = "Adder";

}
<head>
    <meta charset="utf-8" />
</head>
<div class="center" style="padding-top: 50px"><button data-toggle="modal" data-target="#squarespaceModal" class="btn btn-primary center-block">Add Book</button></div>

<!-- line modal -->
<div class="modal fade" id="squarespaceModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h3 class="modal-title" id="lineModalLabel">Add book...</h3>
            </div>
            <div class="modal-body">

                <!-- content goes here -->
                <form asp-controller="Admin" asp-action="AddBook" method="post" class="form-group">
                    
                    <div class="form-group" style="min-width: 100%">
                        <label for="exampleInputPassword1">Genre</label>
                        @Html.DropDownList("BookGenre",
                            new SelectList(Enum.GetValues(typeof(Genre))),
                            "Select Genre",
                            new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Title</label>
                        <textarea id="exampleInputEmail1" spellcheck="false" class="form-control" style="min-width: 100%" rows="1"  placeholder="Book title" asp-for="Text"></textarea>
                        <strong><span class="text-danger" asp-validation-for="Text"></span></strong><br/>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Author firstname</label>
                        <textarea id="exampleInputEmail1" spellcheck="false" class="form-control" style="min-width: 100%"  rows="1" placeholder="Author firstname" asp-for="FirstNameWritter"></textarea>
                        <strong><span class="text-danger" asp-validation-for="FirstNameWritter"></span></strong><br/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Author lastname</label>
                        <textarea id="exampleInputEmail1" spellcheck="false" class="form-control" style="min-width: 100%" rows="1" placeholder="Author lastname" asp-for="LastNameWritter"></textarea>
                        <strong><span class="text-danger" asp-validation-for="LastNameWritter"></span></strong><br/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">About</label>
                        <textarea id="exampleInputEmail1" spellcheck="false" class="form-control" style="min-width: 100%" maxlength="1000" rows="3" placeholder="About" asp-for="About"></textarea>
                        <strong><span class="text-danger" asp-validation-for="About"></span></strong><br/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Quantity</label>
                        <textarea id="exampleInputEmail1" spellcheck="false" class="form-control" style="min-width: 100%" rows="1" placeholder="Number of books to add" asp-for="Counter"></textarea>
                        <strong><span class="text-danger" asp-validation-for="Counter"></span></strong><br/>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputFile">Book image</label>
                        <input type="file" id="exampleInputFile">
                        <p class="help-block">Max size: 250x120</p>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> For sale
                        </label>
                    </div>


                    <div class="modal-footer">
                        <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-default" data-dismiss="modal" role="button">Close</button>
                            </div>
                            <div class="btn-group" role="group">
                                <button type="submit" class="btn btn-default">Add</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
