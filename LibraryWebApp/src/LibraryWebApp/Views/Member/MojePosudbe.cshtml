@model List<Posudba>

@{
    ViewData["Title"] = "MojePosudbe";
}

<h2>MojePosudbe</h2>

<form asp-action="MojePosudbe">
    @if (Model != null)
    {
        <h1>Sve posudbe:</h1>
        foreach (var item in Model)
        {
            <p>
                @item.Title, @item.DanPosudbe - @item.DanVracanja
            <a asp-controller="Member" asp-action="Produzi" asp-route-id="@item.Book.BookId">Produzi rok</a></p>

        }
    }
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
